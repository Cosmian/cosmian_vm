[Unit]
Description=Cosmian KMS
Requires=multi-user.target cosmian_vm_agent.service
After=multi-user.target cosmian_vm_agent.service

[Service]
Type=simple
User=root
ExecStart=/usr/sbin/cosmian_kms
Restart=on-failure
RestartSec=3s
Environment="COSMIAN_KMS_CONF=/var/lib/cosmian_vm/data/app/app.conf"
StandardOutput=syslog+console

[Install]
WantedBy=multi-user.target

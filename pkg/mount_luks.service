[Unit]
Description=open and mount the encrypted /var/lib/cosmian_vm/container to /var/lib/cosmian_vm/data
Requires=multi-user.target dev-tpm0.device
After=multi-user.target dev-tpm0.device

[Service]
Type=oneshot
ExecStart=/bin/bash /root/mount_luks.sh
Restart=on-failure
RestartSec=10s

[Install]
WantedBy=default.target
